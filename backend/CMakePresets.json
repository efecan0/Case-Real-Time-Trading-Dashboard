{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 16 
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "./third_party/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "base-windows",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "architecture": { "value": "x64" },
      "toolset": { "value": "v143" },
      "binaryDir": "${sourceDir}/cmake-build-vs",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/third_party/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "development",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "development-windows",
      "inherits": "base-windows",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "release",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "release-windows",
      "inherits": "base-windows",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-development",
      "configurePreset": "development",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "build-development-windows",
      "configurePreset": "development-windows",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "build-release",
      "configurePreset": "release",
      "configuration": "Release"
    },
    {
      "name": "build-release-windows",
      "configurePreset": "release-windows",
      "configuration": "Release"
    }
  ]
}